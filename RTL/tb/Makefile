#tb文件
tb_file=tb.sv
#编译输出文件
tb_obj=tb
#verilog语法版本
v_ver=-g2005-sv
#RTL文件所在相对路径
v_path=..
#-------------------------------------------------------------------------------------------------------
gtk: $(tb_obj).lxt
	gtkwave $(tb_obj).lxt
#-------------------------------------------------------------------------------------------------------
$(tb_obj).lxt: $(tb_obj)
	vvp -n $(tb_obj) -lxt2
#-------------------------------------------------------------------------------------------------------
$(tb_obj): $(tb_file) $(v_path)/*.v
	iverilog $(v_ver) -o $(tb_obj) -y $(v_path) $(tb_file)
#-------------------------------------------------------------------------------------------------------
#-------------------------------------------------------------------------------------------------------
.PHONY : clean
clean  :
	 rm  -rf  $(tb_obj) *.lxt
#-------------------------------------------------------------------------------------------------------