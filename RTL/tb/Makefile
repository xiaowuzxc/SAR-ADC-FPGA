tb_file=tb.sv
tb_obj=tb
v_ver=-g2005-sv
v_path=..
#-------------------------------------------------------------------------------------------------------
#all: \
#	iverilog \
#	gtk \
#-------------------------------------------------------------------------------------------------------
gtk:$(tb_obj).lxt
	gtkwave $(tb_obj).lxt
#-------------------------------------------------------------------------------------------------------
$(tb_obj).lxt:$(tb_obj)
	vvp -n $(tb_obj) -lxt2
$(tb_obj): tb.sv $(v_path)/*.v
	iverilog $(v_ver) -o $(tb_obj) -y $(v_path) $(tb_file)
#-------------------------------------------------------------------------------------------------------
.PHONY : clean
clean  :
	 rm  -rf  $(tb_obj) *.lxt
#-------------------------------------------------------------------------------------------------------