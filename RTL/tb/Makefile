tb_file=tb.sv
tb_obj=tb
v_ver=-g2005-sv
#-------------------------------------------------------------------------------------------------------
all: \
	iverilog \
	gtk \

#-------------------------------------------------------------------------------------------------------
iverilog:
	iverilog $(v_ver) -o $(tb_obj) -y .. $(tb_file)
	vvp -n $(tb_obj) -lxt2
#-------------------------------------------------------------------------------------------------------
gtk:
	gtkwave $(tb_obj).lxt
#-------------------------------------------------------------------------------------------------------
.PHONY : clean
clean  :
	 rm  -rf  $(tb_obj) *.lxt
#-------------------------------------------------------------------------------------------------------