all: \
	iverilog \
	gtk \

#-------------------------------------------------------------------------------------------------------
iverilog:
	iverilog -g2005-sv -o tb -y .. tb.sv
	vvp -n tb -lxt2
#-------------------------------------------------------------------------------------------------------
gtk:
	gtkwave tb.lxt
#-------------------------------------------------------------------------------------------------------
clean  :
	 rm  -rf  tb *.lxt
#-------------------------------------------------------------------------------------------------------